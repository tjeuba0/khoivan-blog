---
import BaseLayout from '../layouts/BaseLayout.astro'

const projects = [
  {
    title: 'VietinBank eFAST',
    role: 'Senior Android Developer (Team Lead)',
    company: 'VietinBank',
    period: '2024 - Present',
    description:
      'Corporate banking application for VietinBank — one of Vietnam\'s "Big 4" state-owned banks. Leading the Android team responsible for architecture, code quality, and feature delivery for enterprise customers.',
    tech: [
      'Kotlin',
      'Jetpack Compose',
      'Clean Architecture',
      'Multi-Module',
      'Biometric Auth',
      'End-to-end Encryption',
    ],
    playStore: 'https://play.google.com/store/apps/details?id=com.vnpay.vietinbank.efast',
    featured: true,
  },
  {
    title: 'VietinBank eFAST One',
    role: 'Senior Android Developer',
    company: 'VietinBank',
    period: '2024 - Present',
    description:
      'Next-generation mobile banking experience for VietinBank corporate customers. Streamlined UI/UX with modern architecture and enhanced security features.',
    tech: [
      'Kotlin',
      'Jetpack Compose',
      'Hilt',
      'Coroutines & Flow',
      'Material Design 3',
    ],
    playStore: 'https://play.google.com/store/apps/details?id=com.vnpay.vietinbank.efast.one',
    featured: true,
  },
  {
    title: 'Agribank Plus',
    role: 'Key Android Developer',
    company: 'VNPAY',
    period: '2020 - 2024',
    description:
      'The upgraded E-Mobile Banking app for Agribank — Vietnam\'s largest bank by branch network. Served millions of users nationwide with money transfer, bill payment, QR payment, and investment services.',
    tech: [
      'Kotlin',
      'MVVM',
      'Clean Architecture',
      'Biometric Auth',
      'QR Payment',
      'Push Notifications',
    ],
    stats: '10M+ downloads · 3.5★ · 145K reviews',
    playStore: 'https://play.google.com/store/apps/details?id=com.vnpay.Agribank3g',
    featured: true,
  },
  {
    title: 'HDBank Mobile Banking',
    role: 'Android Developer',
    company: 'VNPAY',
    period: '2019 - 2024',
    description:
      'Full-featured mobile banking app for HDBank. Implemented core banking features including fund transfers, savings, loan management, and card services.',
    tech: [
      'Kotlin',
      'Java',
      'MVVM',
      'Retrofit',
      'Room',
      'Encryption',
    ],
    stats: '1M+ downloads · 13.2K reviews',
    playStore: 'https://play.google.com/store/apps/details?id=com.vnpay.hdbank',
    featured: false,
  },
]
---

<BaseLayout title="Portfolio - Khoi Van" description="Các dự án mobile banking tôi đã phát triển trong 8+ năm sự nghiệp">
  <div class="mx-auto max-w-4xl px-4 py-12 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-12">
      <h1 class="text-3xl font-bold tracking-tight">Portfolio</h1>
      <p class="mt-3 opacity-75">
        Các dự án mobile banking tiêu biểu tôi đã tham gia phát triển
      </p>
    </div>

    <!-- Projects -->
    <div class="space-y-8">
      {
        projects.map((project) => (
          <div 
            class="rounded-lg p-6 border"
            style={`border-color: rgba(var(--color-border), 0.2); background-color: rgb(var(--color-card));`}
          >
            <div class="flex items-start justify-between flex-wrap gap-2">
              <div>
                <h2 class="text-xl font-bold">{project.title}</h2>
                <p class="text-sm mt-1" style="color: rgb(var(--color-accent));">
                  {project.role} · {project.company}
                </p>
                <p class="text-xs opacity-60 mt-0.5">{project.period}</p>
              </div>
              {project.featured && (
                <span class="rounded-full px-3 py-1 text-xs font-medium"
                  style="background-color: rgba(var(--color-accent), 0.15); color: rgb(var(--color-accent));">
                  Featured
                </span>
              )}
            </div>

            <p class="mt-4 opacity-90 leading-relaxed">{project.description}</p>

            <div class="mt-4 flex flex-wrap gap-2">
              {project.tech.map((tech) => (
                <span class="rounded-full px-3 py-1 text-xs"
                  style="background-color: rgb(var(--color-card-muted)); color: rgb(var(--color-text));">
                  {tech}
                </span>
              ))}
            </div>

            <div class="mt-4 flex items-center gap-4 text-sm">
              {project.stats && (
                <span class="opacity-70">{project.stats}</span>
              )}
              {project.playStore && (
                <a 
                  href={project.playStore}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-1 font-medium no-underline hover:opacity-80"
                  style="color: rgb(var(--color-accent));"
                >
                  <svg class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M3.609 1.814L13.792 12 3.61 22.186a.996.996 0 0 1-.61-.92V2.734a1 1 0 0 1 .609-.92zm10.89 10.893l2.302 2.302-10.937 6.333 8.635-8.635zm3.199-3.199l2.302 2.302-2.302 2.302-2.659-2.302 2.659-2.302zM5.864 2.658L16.8 8.99l-2.302 2.302-8.635-8.635z"/>
                  </svg>
                  Google Play
                </a>
              )}
            </div>
          </div>
        ))
      }
    </div>

    <!-- CTA -->
    <section class="mt-16 rounded-lg bg-gradient-to-r from-blue-600 to-indigo-600 p-8 text-center">
      <h2 class="text-2xl font-bold text-white">Interested in working together?</h2>
      <p class="mt-2 text-blue-100">
        I'm always open to discussing technology, sharing experiences, or collaborating on interesting projects.
      </p>
      <a
        href="mailto:phamdinhkhoivan@gmail.com"
        class="mt-6 inline-block rounded-md bg-white px-6 py-3 font-semibold text-blue-600 hover:bg-blue-50 no-underline"
      >
        Get in Touch
      </a>
    </section>
  </div>
</BaseLayout>
