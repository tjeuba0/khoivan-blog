---
export interface Props {
  post: {
    id: string
    data: {
      title: string
      description: string
      pubDate: Date
      category: string
      tags: string[]
      featured: boolean
      readingTime: string
      mood?: string
    }
  }
}

const { post } = Astro.props
const url = `/blog/${post.id}`

// Format date for display
const formattedDate = post.data.pubDate.toLocaleDateString('vi-VN', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
})

// Category emojis
const categoryEmojis = {
  engineering: 'üèóÔ∏è',
  life: '‚òï',
  notes: 'üìù',
  projects: 'üöÄ'
}

// Category colors
const categoryColors = {
  engineering: 'from-blue-500 to-cyan-500',
  life: 'from-pink-500 to-rose-500',
  notes: 'from-amber-500 to-orange-500',
  projects: 'from-purple-500 to-indigo-500'
}

const emoji = categoryEmojis[post.data.category] || 'üìÑ'
const gradientColor = categoryColors[post.data.category] || 'from-gray-500 to-gray-600'
---

<article
  class="blog-card group relative flex flex-col overflow-hidden rounded-xl bg-white shadow-sm transition-all duration-300 hover:-translate-y-1 hover:shadow-xl dark:bg-gray-800"
>
  {
    post.data.featured && (
      <span class="featured-badge absolute top-4 right-4 z-10 flex items-center gap-1 rounded-full bg-gradient-to-r from-yellow-500 to-amber-500 px-3 py-1 text-xs font-semibold text-white shadow-lg">
        <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
        </svg>
        Featured
      </span>
    )
  }

  <a href={url} class="card-link flex flex-1 flex-col p-6">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-2">
        <span class={`category-badge inline-flex items-center gap-1 rounded-full bg-gradient-to-r ${gradientColor} px-3 py-1 text-xs font-medium text-white`}>
          <span>{emoji}</span>
          <span>{post.data.category}</span>
        </span>
        {post.data.mood && (
          <span class="mood-indicator rounded-full bg-gray-100 px-2 py-1 text-xs text-gray-600 dark:bg-gray-700 dark:text-gray-400">
            {post.data.mood}
          </span>
        )}
      </div>
      <time datetime={post.data.pubDate.toISOString()} class="text-xs text-gray-500 dark:text-gray-400">
        {formattedDate}
      </time>
    </div>

    <h3 class="mt-4 text-xl font-bold leading-tight text-gray-900 transition-colors duration-200 group-hover:text-transparent group-hover:bg-gradient-to-r group-hover:from-violet-600 group-hover:to-pink-600 group-hover:bg-clip-text dark:text-gray-100">
      {post.data.title}
    </h3>

    <p class="mt-3 line-clamp-3 flex-1 text-gray-600 dark:text-gray-300">
      {post.data.description}
    </p>

    <div class="mt-4 flex items-center justify-between">
      <div class="flex flex-wrap gap-2">
        {post.data.tags.slice(0, 3).map((tag) => (
          <span class="tag-pill rounded-full bg-gray-100 px-2 py-1 text-xs text-gray-600 dark:bg-gray-700 dark:text-gray-400">
            #{tag}
          </span>
        ))}
      </div>
      <div class="flex items-center gap-1 text-sm text-gray-500 dark:text-gray-400">
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span>{post.data.readingTime}</span>
      </div>
    </div>

    <div class="read-more-indicator mt-4 flex items-center gap-1 text-sm font-medium text-violet-600 opacity-0 transition-opacity duration-200 group-hover:opacity-100 dark:text-violet-400">
      <span>Read more</span>
      <svg class="h-4 w-4 transition-transform duration-200 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
      </svg>
    </div>
  </a>
</article>

<style>
  .blog-card {
    background: linear-gradient(145deg, #ffffff 0%, #f9fafb 100%);
    border: 1px solid rgba(229, 231, 235, 0.5);
    position: relative;
    overflow: hidden;
  }

  .blog-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, #8b5cf6 0%, #ec4899 100%);
    transform: translateX(-100%);
    transition: transform 0.3s ease;
  }

  .blog-card:hover::before {
    transform: translateX(0);
  }

  :global(.dark) .blog-card {
    background: linear-gradient(145deg, #1f2937 0%, #111827 100%);
    border: 1px solid rgba(55, 65, 81, 0.5);
  }

  .category-badge {
    animation: fadeInScale 0.3s ease;
  }

  .featured-badge {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  @keyframes fadeInScale {
    from {
      opacity: 0;
      transform: scale(0.9);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.8;
    }
  }

  .tag-pill {
    transition: all 0.2s ease;
  }

  .blog-card:hover .tag-pill {
    transform: translateY(-2px);
  }
</style>
