---
export interface Props {
  page: {
    currentPage: number
    lastPage: number
    url: {
      current: string
      prev?: string
      next?: string
      first?: string
      last?: string
    }
    total: number
    start: number
    end: number
  }
}

const { page } = Astro.props

// Generate page numbers to display
const generatePageNumbers = () => {
  const pages = []
  const maxVisible = 5

  if (page.lastPage <= maxVisible) {
    // Show all pages if total is less than max visible
    for (let i = 1; i <= page.lastPage; i++) {
      pages.push(i)
    }
  } else {
    // Always show first page
    pages.push(1)

    // Calculate range around current page
    let start = Math.max(2, page.currentPage - 1)
    let end = Math.min(page.lastPage - 1, page.currentPage + 1)

    // Add ellipsis if needed
    if (start > 2) pages.push('...')

    // Add middle pages
    for (let i = start; i <= end; i++) {
      pages.push(i)
    }

    // Add ellipsis if needed
    if (end < page.lastPage - 1) pages.push('...')

    // Always show last page
    pages.push(page.lastPage)
  }

  return pages
}

const pageNumbers = generatePageNumbers()

// Helper to generate page URL
const getPageUrl = (pageNum: number) => {
  if (pageNum === 1) return '/blog/'
  return `/blog/${pageNum}/`
}
---

<nav class="flex items-center justify-between border-t border-gray-200 px-4 pt-8 sm:px-0">
  <div class="-mt-px flex w-0 flex-1">
    {
      page.url.prev && (
        <a
          href={page.url.prev}
          class="inline-flex items-center border-t-2 border-transparent pt-4 pr-1 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700"
        >
          <svg class="mr-3 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
            <path
              fill-rule="evenodd"
              d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z"
              clip-rule="evenodd"
            />
          </svg>
          Trang trước
        </a>
      )
    }
  </div>

  <div class="hidden md:-mt-px md:flex">
    {
      pageNumbers.map((pageNum) =>
        pageNum === '...' ? (
          <span class="inline-flex items-center border-t-2 border-transparent px-4 pt-4 text-sm font-medium text-gray-500">
            ...
          </span>
        ) : (
          <a
            href={getPageUrl(pageNum as number)}
            class={`inline-flex items-center border-t-2 px-4 pt-4 text-sm font-medium ${
              pageNum === page.currentPage
                ? 'border-blue-500 text-blue-600'
                : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'
            }`}
            aria-current={pageNum === page.currentPage ? 'page' : undefined}
          >
            {pageNum}
          </a>
        )
      )
    }
  </div>

  <div class="-mt-px flex w-0 flex-1 justify-end">
    {
      page.url.next && (
        <a
          href={page.url.next}
          class="inline-flex items-center border-t-2 border-transparent pt-4 pl-1 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700"
        >
          Trang sau
          <svg class="ml-3 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
            <path
              fill-rule="evenodd"
              d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
              clip-rule="evenodd"
            />
          </svg>
        </a>
      )
    }
  </div>
</nav>

<div class="mt-4 flex justify-center text-sm text-gray-600">
  Hiển thị {page.start + 1} - {page.end + 1} trong tổng số {page.total} bài viết
</div>
