{
  "$ref": "#/definitions/blog",
  "definitions": {
    "blog": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "maxLength": 100
        },
        "description": {
          "type": "string",
          "maxLength": 200
        },
        "pubDate": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "updatedDate": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "author": {
          "type": "string",
          "default": "Khoi Van"
        },
        "heroImage": {
          "type": "string"
        },
        "heroImageAlt": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "enum": [
            "engineering",
            "life",
            "notes",
            "projects"
          ],
          "default": "notes"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "mood": {
          "type": "string",
          "enum": [
            "technical",
            "personal",
            "reflective",
            "humorous"
          ]
        },
        "series": {
          "type": "string"
        },
        "seriesOrder": {
          "type": "number"
        },
        "draft": {
          "type": "boolean",
          "default": false
        },
        "featured": {
          "type": "boolean",
          "default": false
        },
        "language": {
          "type": "string",
          "enum": [
            "vi",
            "en"
          ],
          "default": "vi"
        },
        "readingTime": {
          "type": "string"
        },
        "seo": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string",
              "maxLength": 60
            },
            "description": {
              "type": "string",
              "maxLength": 160
            },
            "ogImage": {
              "type": "string"
            },
            "canonicalURL": {
              "type": "string",
              "format": "uri"
            },
            "noindex": {
              "type": "boolean",
              "default": false
            }
          },
          "additionalProperties": false
        }
      },
      "required": [
        "title",
        "description",
        "pubDate"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}